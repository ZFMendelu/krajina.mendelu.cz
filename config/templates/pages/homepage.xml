<?xml version="1.0" ?>
<template xmlns="http://schemas.sulu.io/template/template"
          xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:schemaLocation="http://schemas.sulu.io/template/template http://schemas.sulu.io/template/template-1.0.xsd">

    <key>homepage</key>

    <view>pages/homepage</view>
    <controller>Sulu\Bundle\WebsiteBundle\Controller\DefaultController::indexAction</controller>
    <cacheLifetime>86400</cacheLifetime>

    <meta>
        <title lang="en">Homepage</title>
        <title lang="de">Startseite</title>
    </meta>

    <properties>
        <property name="title" type="text_line" mandatory="true">
            <meta>
                <title lang="en">Title</title>
                <title lang="de">Titel</title>
            </meta>
            <params>
                <param name="headline" value="true"/>
            </params>

            <tag name="sulu.rlp.part"/>
        </property>

        <property name="url" type="resource_locator" mandatory="true">
            <meta>
                <title lang="en">Resourcelocator</title>
                <title lang="de">Adresse</title>
            </meta>

            <tag name="sulu.rlp"/>
        </property>

        <block name="blocks" default-type="text" minOccurs="0">
            <meta><title lang="en">Content</title></meta>
            <params><param name="add_button_text"><meta><title lang="en">Add content block</title></meta></param></params>

            <types>
                <type name="quote">
                    <meta><title lang="en">Quote</title></meta>
                    <properties>
                        <property name="id" type="text_line">
                            <meta> <title lang="en">id</title> </meta>
                        </property>
                        <property name="image" type="single_media_selection">
                            <meta>
                                <title lang="en">Background Image</title>
                            </meta>
                            <tag name="sulu.block_preview" priority="512"/>
                        </property>
                        <property name="text" type="text_editor">
                            <meta>
                                <title lang="en">Text</title>
                            </meta>
                            <tag name="sulu.block_preview" priority="1024"/>
                        </property>
                    </properties>
                </type>


                <type name="text">
                    <meta><title lang="en">text</title></meta>
                    <properties>
                        <property name="id" type="text_line">
                            <meta> <title lang="en">id</title> </meta>
                        </property>
                        <property name="text" type="text_editor">
                            <meta>
                                <title lang="en">Text</title>
                            </meta>
                            <tag name="sulu.block_preview" priority="1024"/>
                        </property>
                    </properties>
                </type>


                <type name="hero">
                    <meta><title lang="en">hero</title></meta>
                    <properties>
                        <property name="id" type="text_line">
                            <meta> <title lang="en">id</title> </meta>
                        </property>
                        <property name="text" type="text_editor">
                            <meta>
                                <title lang="en">Text</title>
                            </meta>
                            <tag name="sulu.block_preview" priority="1024"/>
                        </property>
                    </properties>
                </type>



                <type name="separator">
                    <meta><title lang="en">separator</title></meta>
                    <properties>
                        <property name="id" type="text_line" colspan="6">
                            <meta> <title lang="en">id</title> </meta>
                        </property>
                        <property name="size" type="single_select" colspan="6">
                            <meta> <title lang="en">Size</title> </meta>
                            <params>
                                <param name="default_value" value="8"/>
                                <param name="values" type="collection">
                                    <param name="20"> <meta> <title lang="en">20rem</title> </meta> </param>
                                    <param name="16"> <meta> <title lang="en">16rem</title> </meta> </param>
                                    <param name="12"> <meta> <title lang="en">12rem</title> </meta> </param>
                                    <param name="8"> <meta> <title lang="en">8rem</title> </meta> </param>
                                    <param name="4"> <meta> <title lang="en">4rem</title> </meta> </param>
                                </param>
                            </params>
                        </property>
                    </properties>
                </type>


                <type name="opening_hours">
                    <meta><title lang="en">opening hours</title></meta>
                    <properties>
                        <property name="id" type="text_line">
                            <meta> <title lang="en">id</title> </meta>
                        </property>
                        <property name="text_intro" type="text_editor">
                            <meta>
                                <title lang="en">Intro</title>
                            </meta>
                            <tag name="sulu.block_preview" priority="1024"/>
                        </property>
                        <property name="text_where" type="text_editor" colspan="6">
                            <meta>
                                <title lang="en">Where</title>
                            </meta>
                        </property>
                        <property name="text_when" type="text_editor" colspan="6">
                            <meta>
                                <title lang="en">When</title>
                            </meta>
                        </property>
                        <property name="text_end" type="text_editor">
                            <meta>
                                <title lang="en">End</title>
                            </meta>
                        </property>
                    </properties>
                </type>




                <type name="authors">
                    <meta><title lang="en">authors</title></meta>
                    <properties>
                        <property name="id" type="text_line">
                            <meta> <title lang="en">id</title> </meta>
                        </property>
                        <block name="sub_blocks" default-type="author" minOccurs="0">
                            <meta> <title lang="en">Content</title> </meta>
                            <params> <param name="add_button_text"> <meta> <title lang="en">Add</title> </meta> </param> </params>
                            <types>
                                <type name="text">
                                    <meta><title lang="en">text</title></meta>
                                    <properties>
                                        <property name="text" type="text_editor">
                                            <meta>
                                                <title lang="en">Text</title>
                                            </meta>
                                            <tag name="sulu.block_preview" priority="1024"/>
                                        </property>
                                    </properties>
                                </type>
                                <type name="author">
                                    <meta>
                                        <title lang="en">Author</title>
                                    </meta>
                                    <properties>
                                        <property name="image" type="single_media_selection" colspan="6">
                                            <meta> <title lang="en">Image</title> </meta>
                                            <tag name="sulu.block_preview" priority="512"/>
                                        </property>
                                        <property name="size" type="single_select" colspan="6">
                                            <meta> <title lang="en">Size of pil</title> </meta>
                                            <params>
                                                <param name="default_value" value="square"/>
                                                <param name="values" type="collection">
                                                    <param name="square"> <meta> <title lang="en">Square</title> </meta> </param>
                                                    <param name="rectangle"> <meta> <title lang="en">Rectange</title> </meta> </param>
                                                </param>
                                            </params>
                                        </property>
                                        <property name="text" type="text_area">
                                            <meta> <title lang="en">Text</title> </meta>
                                            <tag name="sulu.block_preview" priority="1024"/>
                                        </property>
                                    </properties>
                                </type>
                            </types>
                        </block>
                    </properties>
                </type>

                <type name="map">
                    <meta><title lang="en">map</title></meta>
                    <properties>
                        <property name="id" type="text_line">
                            <meta> <title lang="en">id</title> </meta>
                        </property>
                        <property name="map" type="single_media_selection">
                            <meta>
                                <title lang="en">Map</title>
                            </meta>
                            <tag name="sulu.block_preview" priority="1024"/>
                        </property>
                        <property name="description" type="text_editor">
                            <meta>
                                <title lang="en">Description</title>
                            </meta>
                        </property>
                        <block name="sub_blocks_2" default-type="point" minOccurs="0">
                            <meta> <title lang="en">Points</title> </meta>
                            <params> <param name="add_button_text"> <meta> <title lang="en">Add point</title> </meta> </param> </params>
                            <types>
                                <type name="point">
                                    <meta><title lang="en">text</title></meta>
                                    <properties>
                                        <property name="name" type="text_line" colspan="6">
                                            <meta>
                                                <title lang="en">name</title>
                                            </meta>
                                            <tag name="sulu.block_preview" priority="1024"/>
                                        </property>

                                        <property name="color" type="color" colspan="6">
                                            <meta>
                                                <title lang="en">Color</title>
                                            </meta>
                                            <tag name="sulu.block_preview" priority="512"/>
                                        </property>

                                        <property name="coor_x" type="number" colspan="6">
                                            <meta>
                                                <title lang="en">X</title>
                                            </meta>
                                            <params>
                                                <param name="min" value="0"/>
                                                <param name="max" value="100"/>
                                            </params>
                                        </property>

                                        <property name="coor_y" type="number" colspan="6">
                                            <meta>
                                                <title lang="en">Y</title>
                                            </meta>
                                            <params>
                                                <param name="min" value="0"/>
                                                <param name="max" value="100"/>
                                            </params>
                                        </property>

                                        <property name="link" type="single_page_selection">
                                            <meta>
                                                <title lang="en">Link</title>
                                            </meta>
                                        </property>



                                    </properties>
                                </type>
                            </types>
                        </block>
                    </properties>
                </type>

                <type name="survey_results">
                    <meta><title lang="en">survey results</title></meta>
                    <properties>
                        <property name="id" type="text_line">
                            <meta> <title lang="en">id</title> </meta>
                        </property>
                        <property name="key" type="text_line">
                            <meta>
                                <title lang="en">survey-key</title>
                            </meta>
                            <tag name="sulu.block_preview" priority="1024"/>
                        </property>
                    </properties>
                </type>


            </types>
        </block>

    </properties>
</template>
